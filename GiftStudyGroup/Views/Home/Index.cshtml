@model List<GiftStudyGroup.Models.GiftStudyGroup>

@{
    ViewBag.Title = "My Study Group People";
}

<h3>Group Members</h3>
<table class="table">
    <thead>
        <tr>
            <th>Student Number</th>
            <th>Name</th>
            <th>Surname</th>
            <th>Email Address</th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null && Model.Any())
        {
            foreach (var student in Model)
            {
                <tr>
                    <td>@student.StudentNum</td>
                    <td>@student.Name</td>
                    <td>@student.Surname</td>
                    <td>@student.EmailAddress</td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="4">No data available</td> <!-- Displays message if Model is empty -->
            </tr>
        }
    </tbody>
</table>